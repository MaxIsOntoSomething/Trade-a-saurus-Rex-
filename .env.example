# Binance API Settings
BINANCE_API_KEY=your_api_key
BINANCE_API_SECRET=your_api_secret
TESTNET_API_KEY=your_testnet_key
TESTNET_API_SECRET=your_testnet_secret
FUTURES_TESTNET_API_KEY=your_futures_testnet_key
FUTURES_TESTNET_API_SECRET=your_futures_testnet_secret

# Trading Settings
TRADING_MODE=spot
USE_TESTNET=true
ORDER_TYPE=limit
TRADE_AMOUNT=10
USE_PERCENTAGE=false
RESERVE_BALANCE=2000
ORDER_TIMEOUT_HOURS=8
